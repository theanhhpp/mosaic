{% trans_default_domain "admin" %}
{% extends 'admin.html.twig' %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.7/css/jquery.dataTables.min.css">
{% endblock %}

{% block content %}
    <h1 class="page-header">Liên hệ khách hàng</h1>

    <div class="container-fluid">
        <div class="row form-group">
            <div class="col-xs-10 col-sm-4 col-md-3">
                <label class="control-label">Tên khách hàng</label>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-3">
                {{ CONTACTS.name }}
            </div>
        </div>

        <div class="row form-group">
            <div class="col-xs-10 col-sm-4 col-md-3">
                <label class="control-label">Email của khách hàng</label>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-3">
                {{ CONTACTS.email }}
            </div>
        </div>

        <div class="row form-group">
            <div class="col-xs-10 col-sm-4 col-md-3">
                <label class="control-label">Tiêu đề </label>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6">
                {{ CONTACTS.subject }}
            </div>
        </div>

        <div class="row form-group">
            <div class="col-xs-10 col-sm-4 col-md-3">
                <label class="control-label">Nội dung</label>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6">
                {{ CONTACTS.body }}
            </div>
        </div>


    </div>
    {{ form_start(form) }}
    {{ form_widget(form.id) }}

    <input type="submit" class="btn btn-primary" value="Xóa" onclick="javascript: return confirm('Bạn chắc chắn muốn xóa liên hệ này ?');" />

    <a href="{{ path('admin_contact_list') }}" class="btn btn-primary" >Về danh sách</a>
    {{ form_end(form) }}


    <div class="clearer"></div>
{% endblock %}


