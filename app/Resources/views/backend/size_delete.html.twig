{% trans_default_domain "admin" %}
{% extends 'admin.html.twig' %}


{% block content %}
	<h1 class="page-header">Xóa kích thước</h1>
	<div class="container-fluid">
		<div class="row">
			<label class="col-xs-12-col-sm-12 col-md-6 alert alert-danger" id="error_message" style="display: none">{{ form_errors(form) }}</label>
		</div>

		<div class="row">
			<label class="col-xs-12-col-sm-12 col-md-6 alert alert-success" id="success_message" style="display: none">{{ message }}</label>
		</div>
		
		
		<div class="row form-group">
            <div class="col-xs-10 col-sm-4 col-md-3">
                <label class="control-label">Giá trị (mm/inch)</label>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-3">
                {{ SIZE.size_value }}
            </div>
        </div>

		
		{{ form_start(form) }}
			{{ form_widget(form.id) }}
			
			<input type="submit" class="btn btn-primary" value="Xóa" onclick="javascript: return confirm('Bạn chắc chắn muốn xóa kích thước này ?');" />
			
			<a href="{{ path('admin_size_list') }}" class="btn btn-primary" >Về danh sách</a>
		{{ form_end(form) }}
		
	</div>
	
	<div class="clearer"></div>

{% endblock %}

