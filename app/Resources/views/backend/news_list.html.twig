{% trans_default_domain "admin" %}
{% extends 'admin.html.twig' %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.7/css/jquery.dataTables.min.css">
{% endblock %}

{% set row_index = 1 %}

{% block content %}
    <h1 class="page-header">Tin tức</h1>

    <a href="{{ path('admin_news_add') }}" class="btn btn-primary" style="width: 10%; float: right"><h5>Thêm</h5> </a>
    <div class="clearer"></div>

    <div class="table-responsive">
        <table class="table table-striped report-table" id="MainTable">
            <thead>
            <tr>
                <th>&nbsp;</th>
                <th class="a_left">Tên tiếng anh</th>
                <th class="a_left">Tên tiếng việt</th>
				<th>Hiển thị</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for new in NEWS %}
                <tr>
                    <td>{{ row_index }}</td>
                    <td class="a_left">{{ new['name_en'] }}</td>
                    <td class="a_left">{{ new['name_vi'] }}</td>
					<td>
						{% if (new['status']) %}
							<span style="color: green"><span class="glyphicon glyphicon-ok"></span></span>
						{% else %}
							<span style="color: red"><span class="glyphicon glyphicon-remove"></span></span>
						{% endif %}
					</td>
                    <td>
                        <a href="{{ path('admin_news_edit', {'id': new['id']}) }}">Sửa</a>
                        &nbsp;
                        |
                        &nbsp;
                        <a href="{{ path('admin_news_delete', {'id': new['id']}) }}">Xóa</a>
                    </td>
                </tr>

                {% set row_index = row_index + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="clearer"></div>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" language="javascript">

        $(document).on('ready', function () {
            $('#MainTable').DataTable({ bFilter: false
                , bInfo: false
                , "aoColumnDefs": [{ 'bSortable': false, 'aTargets': [3]}]
            });
        });
    </script>
{% endblock %}